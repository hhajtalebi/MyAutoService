@page
@model LoginModel

@{
    ViewData["Title"] = "ورود به سیستم";
    Layout = "/Pages/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-4 card shadow-lg border-light mx-auto p-3 ">
        <section>
            <form id="account" method="post">
                <h6 class="text-info">جهت ورود لطفا نام کاربری و کلمه عبور را وارد کنید</h6>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-label">
                    <label asp-for="Input.Email" class="form-label">ایمیل</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />

                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-label">
                    <label asp-for="Input.Password" class="form-label"> رمز عبور</label>

                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            به خاطر بسپار
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary card-img-bottom">ورود به سایت</button>
                </div>
                <div>
                    <p>
                        <a class="text-decoration-none " id="forgot-password" asp-page="./ForgotPassword">آیا کلمه عبور خود را فراموش کرده اید؟</a>
                    </p>
                    <p>
                        <a class="text-decoration-none " asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">ثبت نام کاربر حدید</a>
                    </p>
                    <p>
                        <a class="text-decoration-none " id="resend-confirmation" asp-page="./ResendEmailConfirmation">ارسال دوباره ایمیل تائید</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
