@page
@model LogoutModel
@{
    ViewData["Title"] = "خروج از سیستم";
}

<header>
    <div class="card-header border-1 align-content-center text-center shadow">
   
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new {area = ""})" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">برای خروج از سیستم کلیک کنید</button>
            </form>
        }
        else
        {
            <i class="fa-duotone fa-arrow-right-from-bracket"></i>
            <h6 >شما با موفقیت از سیستم خارج شدید..</h6>
        }
    }
    </div>
</header>
