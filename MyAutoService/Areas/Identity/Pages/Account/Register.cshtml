@page
@model RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
    Layout = "/Pages/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-6 card card-group shadow-lg p-3  border-light mx-auto ">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h6 class="text-center">ثبت نام کاربر جدید</h6>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-horizontal  d-inline-block">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control m-2" autocomplete="Name" aria-required="true"/>

                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-horizontal d-inline-block">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control m-2" autocomplete="Email" aria-required="true"/>

                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            
            <div class="form-horizontal d-inline-block">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control m-2" autocomplete="PhoneNumber" aria-required="false"/>

                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
           
            
            <div class="form-horizontal d-inline-block">
                <label asp-for="Input.City"></label>
                <input asp-for="Input.City" class="form-control m-2" autocomplete="City" />

                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            
            <div class="form-horizontal d-inline-block">
                <label asp-for="Input.PostalCode"></label>
                <input asp-for="Input.PostalCode" class="form-control m-2" autocomplete="PostalCode" />

                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>


            <div class="form-horizontal d-inline-block">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control m-2" autocomplete="new-password" aria-required="true"/>

                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-horizontal d-inline-block">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control m-2" autocomplete="new-password" aria-required="true"/>

                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-horizontal">
                <label asp-for="Input.Address"></label>
                <textarea asp-for="Input.Address" class="form-control m-2" autocomplete="Address" ></textarea>

                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">ثبت نام</button>
        </form>
    </div>
