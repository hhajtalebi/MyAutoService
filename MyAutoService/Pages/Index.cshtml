@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row">
        <div class="col-3">
            <ul class="list-group shadow">
                <li class="list-group-item active" aria-current="true">لیست سرویس ها</li>
                @foreach (var Item in Model.ServiceTypes)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">@Item.Name. <span class="badge bg-primary rounded-pill">@Item.Price</span></li>

                }
                
            </ul>
        </div>
        <div class="col-9">
            <div id="carouselExampleSlidesOnly" class="carousel slide shadow " data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/img/1.jpg" class="d-block w-100 " style="height: 350px" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/img/2.jpg" class="d-block w-100" style="height: 350px" alt="...">
                    </div>
                    
                    <div class="carousel-item">
                        <img src="/img/4.jpg" class="d-block w-100" style="height: 350px" alt="...">
                    </div>
                    
                    <div class="carousel-item">
                        <img src="/img/6.jpg" class="d-block w-100" style="height: 350px" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/img/7.jpg" class="d-block w-100" style="height: 350px" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/img/8.jpg" class="d-block w-100" style="height: 350px" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/img/9.png" class="d-block w-100" style="height: 350px" alt="...">
                    </div>
                </div>
            </div>

        </div> 

    </div>
    <div class="shadow mt-3">
    <div class="row">
        <h5 class="text-center text-info"> اتومبیل هایی که در حال سرویس می باشند</h5>
    </div>
        <div class="row">
            @foreach (var Item in Model.Cars)
            {
                <div class="card m-3 mx-auto shadow" style="width: 18rem;">
                    <img src="/CarImages/@Item.ImageName" class="card-img-top" style="height: 150px" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Item.Name</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@Item.Model</li>
                        <li class="list-group-item">@Item.color</li>
                        <li class="list-group-item">@Item.Year</li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="card-link">لیست مشتریان</a>
                        <a href="#" class="card-link">خدمات</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>