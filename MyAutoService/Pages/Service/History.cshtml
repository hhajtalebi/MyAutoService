@page
@model MyAutoService.Pages.Service.HistoryModel
@{
}
<div class=" pt-4 pb-2 row shadow mb-4">
    <div class="col-6">
        <h3 class="text-info py-2 ">تاریخچه سرویس ها</h3>
    </div>
    <div class="col-3 offset-3 text-end py-2">
        <a asp-page="/Cars/Index" asp-route-UserID="@Model.UserID" class="btn btn-outline-success form-control"> بازگشت به لیست</a>
    </div>
</div>
@if (Model.ServiceHeaders.Count == 0)
{
    <div class="alert alert-info">
        تاریخچه ای وجود ندارد
    </div>
}
else
{
    <div class="shadow mt-4">
        <div class="card container">
            <div class="card-header  bg-dark text-light row mb-2 ">
                <div class="col-1 text-start pt-3 text-white-50">
                    <i class="fas fa-user"></i>
                </div>
                <div class="col-5">
                    <label class="text-info">
                        @Model.ServiceHeaders[0].Car.ApplicationUser.Name
                    </label>
                    <br/>
                    <label class="text-info">
                        @Model.ServiceHeaders[0].Car.ApplicationUser.PhoneNumber /
                        @Model.ServiceHeaders[0].Car.ApplicationUser.Email

                    </label>
                </div>
                <div class="col-1 text-start pt-3 text-white-50">
                    <i class="fas fa-car"></i>
                </div>
                <div class="col-5">
                    <label class="text-info">
                        @Model.ServiceHeaders[0].Car.Name 

                    </label>
                    <br/>
                    <label class="text-info">
                        @Model.ServiceHeaders[0].Car.Model / @Model.ServiceHeaders[0].Car.color
                    </label>
                   

                </div>
            </div>
            <br/>
            <div class="card-body mt-1 mb-3">
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>@Html.DisplayNameFor(m=>m.ServiceHeaders[0].Miles)</th>
                        <th>@Html.DisplayNameFor(m=>m.ServiceHeaders[0].TotalPrice)</th>
                        <th>@Html.DisplayNameFor(m=>m.ServiceHeaders[0].Description)</th>
                        <th>@Html.DisplayNameFor(m=>m.ServiceHeaders[0].DateAdded)</th>
                        <th></th>
                    </tr>
                    @foreach (var Item in Model.ServiceHeaders)
                    {
                        <tr>
                            <td>@Item.Miles</td>
                            <td>@Item.TotalPrice.ToString("#.0   تومان")</td>
                            <td>@Item.Description</td>
                            <td>@Item.DateAdded.ToShamsi()</td>
                            <td>
                                <a asp-page="Details" class="btn btn-info form-control" 
                                   asp-route-ServicId="@Item.Id"> جزئیات</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            
        </div>
    </div>
}

